{% extends 'base.html.twig' %}

{% block title %}Créer une annonce
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('create-annonce.css') }}">
{% endblock %}

{% block body %}

	<nav class="navbar navbar-expand-lg navbar-light bg-light" style="box-shadow: 0 4px 16px 0 rgba(50,56,63,0.16);">
		<a class="navbar-brand" style="color: #41A1DB; font-family: 'Montserrat', sans-serif;">Jobeet</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('accueil') }}">Accueil
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('profil-utilisateur') }}">Mon profil</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-entreprise') }}">Liste des entreprises</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-matchs') }}">Liste des matchs</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-offres') }}">Liste des offres</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-candidatures') }}">Liste des candidatures</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('recherche') }}">Recherche
					</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="{{ path('create') }}">Créer une annonce
						<span class="sr-only">(current)</span>
					</a>
				</li>
			</ul>
		</div>
	</nav>


	<div class="my_container">
		<h1 style="color: #41A1DB">Créer une annonce</h1>


		<form action="{{ path('inscription') }}" method="post" name="formulario_login">
			<input type="text" id="title" name="_title" placeholder="Titre de l'annonce"/>
			<br/>
			<input type="text" id="description" name="_description" placeholder="Description de l'annonce"/>
			<br/>
			<input type="text" id="mail" name="_mail" value="" placeholder="Compétences requises"/>
			<br/>
			<input type="submit" name="login" value="Ajouter l'annonce"/>
		</form>
	</div>
{% endblock %}
