{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Jobeet
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('home.css') }}">
{% endblock %}

{% block body %}
	<nav class="navbar navbar-light bg-light" style="background: red">
		<span class="navbar-brand mb-0 h1">Jobeet</span>
	</nav>
	<div class="my_container">
		<h1 style="color: #41A1DB">Home</h1>

		<div class="buttons_container">
			{% if test == 1 %}
				<button class="my_button">
					<a href="{{ path('profil-utilisateur') }}">Profil utilisateur</a>
				</button>
			{% endif %}
			<button class="my_button">
				<a id="1" href="{{ path('profil-entreprise', {id: '1'}) }}">Profil entreprise</a>
			</button>
			<button class="my_button">
				<a href="{{ path('liste-entreprise') }}">Liste des entreprises</a>
			</button>
			<button class="my_button">
				<a href="{{ path('liste-matchs') }}">Liste des matchs</a>
			</button>
			<button class="my_button">
				<a href="{{ path('liste-offres') }}">Liste des offres</a>
			</button>
			<button class="my_button">
				<a href="{{ path('liste-candidatures') }}">Liste des candidatures</a>
			</button>
		</div>
	</div>
{% endblock %}
