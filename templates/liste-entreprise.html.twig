{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('liste-entreprise.css') }}">
{% endblock %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" style="color: #41A1DB; font-family: 'Montserrat', sans-serif;">Jobeet</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('accueil') }}">Accueil
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('profil-utilisateur') }}">Mon profil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('profil-entreprise', {id: '1'}) }}">Profil entreprise</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="{{ path('liste-entreprise') }}">Liste des entreprises
						<span class="sr-only">(current)</span>
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-matchs') }}">Liste des matchs</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-offres') }}">Liste des offres</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('liste-candidatures') }}">Liste des candidatures</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('recherche') }}">Recherche
					</a>
				</li>
			</ul>
		</div>
	</nav>
	<div class="my_container">
		<h1 style="color: #41A1DB">Liste des entreprises</h1>
		<p>Aucune entreprise trouv√©e</p>

		{% for entreprise in entreprises.rows %}
			<div class="company">
				<a href="{{ path('profil-entreprise', {id : entreprise.doc._id}) }}">
					<img src="{{ entreprise.doc.image }}" class="img-thumbnail" alt="entreprise">
					<p style="margin-top: 2px">{{ entreprise.doc.name }}</p>
				</a>
			</div>
		{% endfor %}

	</div>
{% endblock %}
